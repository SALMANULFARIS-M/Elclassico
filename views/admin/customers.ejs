<%- include('../admin/sidenav-topnav.ejs')%>
    <div class="left">
        <ul class="breadcrumb">

            <li><i class='bx bx-chevron-right fs-3'></i></li>
            <li>
                <a class="active fs-5" href="/admin/customers">Customers</a>
            </li>
        </ul>
    </div>
    <!-- Table -->

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Customers</h4>
                <div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover " id="myTable">
                        <thead>
                            <tr>
                                <th>index</th>
                                <th>image</th>
                                <th>Name</th>
                                <th>mobile</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(users.length> 0){
                            for(let i=0;i<users.length;i++){ %>
                                    <tr>
                                        <td class="text-light">
                                            <%=[i+1] %>

                                        </td>
                                        <td>img</td>
                                        <td class="text-light">
                                            <%= users[i].name %>
                                        </td>
                                        <td class="text-danger">
                                            <%= users[i].mobile %>
                                        </td>
                                        <td class="text-light">
                                            <%= users[i].email %>
                                        </td>

                                        <% if(users[i].is_verified==1){%>
                                            <td><button type="button" class="btn btn-outline-success btn-rounded">Active</button>
                                            </td>

                                            <%}else{%>
                                                <td><button type="button" class="btn btn-outline-danger btn-rounded">In
                                                        Active</button></td>

                                                <%}%>


                                                    <td>
                                                        <% if(users[i].is_verified==1){%>
                                                            <a href="/admin/block?id=<%= users[i]._id %>"
                                                                class="btn btn-danger">Block</blockquote></a>
                                                            <%}else{%>
                                                                <a href="/admin/block?id=<%= users[i]._id %>"
                                                                    class="btn btn-primary">Unblock</blockquote></a>
                                                                <%}%>
                                                                    <a href="/admin/customerinfo?id=<%= users[i]._id %>"
                                                                        class="btn btn-outline-info"><i
                                                                            class="fa fa-user-secret"
                                                                            aria-hidden="true"></i>View</a>
                                                    </td>
                                    </tr>
                                <% } } else{ %>
                                        <tr>
                                            <td colspan="5">Users Not Found</td>
                                        </tr>
                                    <% } %>
                                    <tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>


    <style>
        #myTable {
            border-collapse: collapse;
            /* Collapse borders */
            width: 100%;
            /* Full-width */
            border: 1px solid #ddd;
            /* Add a grey border */
            font-size: 18px;
            /* Increase font-size */
        }

        #myTable th,
        #myTable td {
            text-align: left;
            /* Left-align text */
            padding: 12px;
            /* Add padding */
        }

        #myTable tr {
            /* Add a bottom border to all table rows */
            border-bottom: 1px solid #ddd;
        }
    </style>



