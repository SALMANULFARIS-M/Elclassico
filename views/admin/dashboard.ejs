<%- include('../admin/sidenav-topnav.ejs')%>
  <div class="left">
    <ul class="breadcrumb">

      <li><i class='bx bx-chevron-right fs-3'></i></li>
      <li>
        <a class="active fs-5" href="/admin/dashboard">Dashboard</a>
      </li>
    </ul>
  </div>

  <!-- partial -->

  <div class="content-wrapper">
  </div>
  <div class="row">
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-9">
              <div class="d-flex align-items-center align-self-start text-center">
                <h3 class="mb-0 text-success text-center">
                  <%=userData.length%>
                </h3>
              </div>
            </div>
            <div class="col-3">
              <div class="icon icon-box-success ">
                <i class='bx bxs-user-pin bx-flashing ' ></i>
              </div>
            </div>
          </div>
          <h6 class="text-muted font-weight-normal">CUSTOMERS</h6>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-9">
              <div class="d-flex align-items-center align-self-start">
                <h3 class="mb-0">
                  <%=orderData.length%>
                </h3>
              </div>
            </div>
            <div class="col-3">
              <div class="icon icon-box-success">
                <i class='bx bxl-shopify bx-flashing fa-2x' ></i>
              </div>
            </div>
          </div>
          <h6 class="text-muted font-weight-normal">ORDERS</h6>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-9">
              <div class="d-flex align-items-center align-self-start">
                <h3 class="mb-0" id="earnings">
                  <%if(earnings.length==1){%>
                    ₹<%=earnings[0].total%>
                      <%}else{%>
                        ₹0
                        <%}%>
                </h3>
              </div>
            </div>
            <div class="col-3">
              <div class="icon icon-box-success">
                <i class='bx bxs-wallet-alt bx-flashing fa-2x' ></i>
              </div>
            </div>
          </div>
          <h6 class="text-muted font-weight-normal">EARNINGS</h6>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-9">
              <div class="d-flex align-items-center align-self-start">
                <h3 class="mb-0">
                  <%=deliveredCount%>
                </h3>

              </div>
            </div>
            <div class="col-3">
              <div class="icon icon-box-success ">
                <i class='bx bxs-truck bx-flashing fa-2x' ></i>
              </div>
            </div>
          </div>
          <h6 class="text-muted font-weight-normal">DELIVERED</h6>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Transaction History</h4>
          <canvas id="transaction-history" class="transaction-chart"></canvas>
          <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
            <div class="text-md-center text-xl-left">
              <h6 class="mb-1">Razorpay Payment</h6>

            </div>
            <input type="hidden" value="<%=wallet[0].total%>" id="wallet">
            <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
              <h6 class="font-weight-bold mb-0 text-danger" id="razorpay"> <%if(razorpay.length==1){%>
                ₹<%=razorpay[0].total%>
                  <%}else{%>
                    ₹0
                    <%}%></h6>
            </div>
          </div>
          <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
            <div class="text-md-center text-xl-left">
              <h6 class="mb-1">CASH ON DELIVERY</h6>
            </div>
            <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
              <h6 class="font-weight-bold mb-0 text-danger" id="cod"> <%if(cod.length==1){%>
                ₹<%=cod[0].total%>
                  <%}else{%>
                    ₹0
                    <%}%></h6>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8 grid-margin stretch-card">
      <div class="card">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card-body">
              <h4 class="card-title">Last week sales</h4>
              <input type="hidden" id="days" value="<%=days%>">
              <input type="hidden" id="totals" value="<%=totals %>">
              <canvas id="barChart" style="height:230px"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 grid-margin">
      <div class="card">
        <div class="card-body">
          <h5>CATEGORIES</h5>
          <div class="row">
            <div class="col-8 col-sm-12 col-xl-8 my-auto">
              <div class="d-flex d-sm-block d-md-flex align-items-center">
                <h2 class="mb-0 text-success">
                  <%=category.length%>
                </h2>
              </div>
            </div>
            <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
              <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-4 grid-margin">
      <div class="card">
        <div class="card-body">
          <h5>PRODUCTS</h5>
          <div class="row">
            <div class="col-8 col-sm-12 col-xl-8 my-auto">
              <div class="d-flex d-sm-block d-md-flex align-items-center">
                <h2 class="mb-0 text-success">
                  <%=productData.length%>
                </h2>
              </div>
            </div>
            <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
              <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-4 grid-margin">
      <div class="card">
        <div class="card-body">
          <h5>SALES</h5>
          <div class="row">
            <div class="col-8 col-sm-12 col-xl-8 my-auto">
              <div class="d-flex d-sm-block d-md-flex align-items-center">
                <h2 class="mb-0 text-success"> <%if(lastMonthEarning.length==1){%>
                  ₹<%=lastMonthEarning[0].total%>
                    <%}else{%>
                      ₹0
                      <%}%></h2>
              </div>
              <h6 class="text-muted font-weight-normal"> Since last month</h6>
            </div>
            <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
              <i class="icon-lg mdi mdi-monitor text-warning ml-auto"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row ">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">RECENT ORDERS</h4>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>

                  <th>index</th>
                  <th>OrderID</th>
                  <th>Username</th>
                  <th>Order Date</th>
                  <th>Payment Status</th>
                  <th>Order Status</th>
                </tr>
              </thead>

              <% if(orderData.length>0){
                for(let i=0;i<orderData.length;i++){ %>
                  <tbody>
                    <tr>
                      <td class="text-light">
                        <%=[i+1] %>
                      </td>
                      <td class="text-light">
                        <%= orderData[i]._id %>
                      </td>
                      <td class="text-light">
                        <%= orderData[i].userId.name%>
                      </td>
                      <td class="text-light">
                        <%= orderData[i].date.slice(0,16) %>
                      </td>
                      <%if(orderData[i].payment_status=='COMPLETED' ){%>
                        <td class="text-success">

                          <%= orderData[i].payment_status %>
                        </td>
                        <%}else{%>
                          <td class="text-danger">

                            <%= orderData[i].payment_status %>
                          </td>
                          <%}%>


                            <td class="text-light">

                              <%if(orderData[i].order_status=='PLACED' ){%>
                                <button class="btn btn-outline-warning">
                                  <%= orderData[i].order_status %>
                                </button>
                                <%}else if(orderData[i].order_status=='SHIPPED' ){%>
                                  <button class="btn btn-outline-info">
                                    <%= orderData[i].order_status %>
                                  </button>
                                  <%}else if(orderData[i].order_status=='OUT FOR DELIVERY' ){%>
                                    <button class="btn btn-outline-primary">
                                      <%= orderData[i].order_status %>
                                    </button>
                                    <%}else if(orderData[i].order_status=='DELIVERED' ){%>
                                      <button class="btn btn-outline-success">
                                        <%= orderData[i].order_status %>
                                      </button>
                                      <%} else if(orderData[i].order_status=='CANCELLED' ){%>
                                        <button class="btn btn-outline-danger">
                                          <%= orderData[i].order_status %>
                                        </button>
                                        <%} else if(orderData[i].order_status=='RETURNREQ' ){%>
                                          <button class="btn btn-outline-secondary">
                                            <%= orderData[i].order_status %>
                                          </button>
                                          <%} else if(orderData[i].order_status=='RETURNED' ){%>
                                            <button class="btn btn-outline-danger text-light">
                                              <%= orderData[i].order_status %>
                                            </button>
                                            <%}%>
                            </td>

                    </tr>
                  </tbody>
                  <% } } else{ %>
                    <tbody>
                      <tr>
                        <td colspan="5">Currently no orders have...</td>
                      </tr>
                    </tbody>
                    <% } %>


            </table>
          </div>
        </div>
      </div>
    </div>

    <%- include('../admin/footer.ejs')%>